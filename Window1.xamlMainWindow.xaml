<Window x:Class="Teste_Técnico.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard - Sistema de Vendas" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="#F8F8F8">

    <Grid>
        <!-- Layout principal: coluna fixa (menu) + coluna conteúdo -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ================== MENU LATERAL ================== -->
        <DockPanel Background="#F2F2F2" Grid.Column="0">
            <StackPanel>
                <TextBlock Text="Principal" FontWeight="Bold" Margin="15,20,0,10"/>
                <Button Content="🏠 Início" Margin="10,2" Padding="10" Background="Transparent"
                        BorderThickness="0" HorizontalContentAlignment="Left"
                        Click="Dashboard_Click"/>

                <TextBlock Text="Cadastros" FontWeight="Bold" Margin="15,20,0,10"/>
                <Button Content="👤 Pessoas" Margin="10,2" Padding="10" Background="Transparent"
                        BorderThickness="0" HorizontalContentAlignment="Left"
                        Click="Pessoas_Click"/>
                <Button Content="📦 Produtos" Margin="10,2" Padding="10" Background="Transparent"
                        BorderThickness="0" HorizontalContentAlignment="Left"
                        Click="Produtos_Click"/>

                <TextBlock Text="Movimentação" FontWeight="Bold" Margin="15,20,0,10"/>
                <Button Content="🛒 Pedidos" Margin="10,2" Padding="10" Background="Transparent"
                        BorderThickness="0" HorizontalContentAlignment="Left"
                        Click="Pedidos_Click"/>

                <TextBlock Text="Relatórios" FontWeight="Bold" Margin="15,20,0,10"/>
                <Button Content="📊 Relatórios" Margin="10,2" Padding="10" Background="Transparent"
                        BorderThickness="0" HorizontalContentAlignment="Left"
                        />

                <TextBlock Text="Sistema" FontWeight="Bold" Margin="15,20,0,10"/>
                <Button Content="⚙ Configurações" Margin="10,2" Padding="10" Background="Transparent"
                        BorderThickness="0" HorizontalContentAlignment="Left"
                        />
            </StackPanel>
        </DockPanel>

        <!-- ================== CONTEÚDO DINÂMICO ================== -->
        <ContentControl x:Name="MainContent" Grid.Column="1" Margin="20"/>
    </Grid>
</Window>
